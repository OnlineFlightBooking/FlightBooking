@model FLightBookingSystem.DatabaseLayer.Customer
@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style type="text/css">
        .bs-example {
            height: 220px;
        }
        form {
            margin-top: 10%;
        }
        .centerlook {
            padding-left: 400px;
            font-weight: bold;
            width: 1000px;
        }

        .error {
            padding-left: 400px;
            font-weight: bold;
            width: 1000px;
            color: red;
        }

        .loginbtn {
            padding-left: 500px;
        }
    </style>

</head>
<body>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <main id="main-container" class="main-container">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="section-content m-b-40">
                            <h5 class="section-content__title text-center">Forgot Passowrd</h5>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="login-form-container">

                            <div class="login-register-form">
                                <form>
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="text-danger">@ViewBag.Message</div>
                                    <div class="form-box__single-group">
                                        <label class="form-username">Email/AdharCard </label>
                                        @*@Html.LabelFor(model => model.EmailAddress, htmlAttributes: new { @for = "form-username" })*@
                                        @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @id = "form-username" } })
                                        @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger" })
                                    </div>
                                  
                                    <button class="btn btn--box btn--medium btn--radius btn--black btn--black-hover-green btn--uppercase font--semi-bold" style="margin:10px;" type="submit">Send Email</button>
                                </form>
                            </div>
                            <br>
                            <a class="link--gray" href="@Url.Action("Signup","Login")">If you does not have account? Register Account Here.</a>
                        </div>

                    </div>
                    <div class="col-lg-6">
                        <img src="~/images/second.jpg" style="width:500px;" />
                    </div>

                </div>
            </div>
        </main>
    }
</body>
</html> 